<div class="buyable"
     i18n:domain="bda.plone.shop">

  <div class="item price"
       tal:define="display_gross view/display_gross">
    <strong i18n:translate="price">Net</strong>
    <span tal:replace="view/item_net"
          tal:condition="not:display_gross">1.0</span>
    <span tal:replace="view/item_gross"
          tal:condition="display_gross">1.0</span>
    <span tal:replace="view/currency">&euro;</span>
    (<span i18n:translate="exclvat"
           tal:condition="not:display_gross"
           class="vat_label">excl. Vat</span>
    <span i18n:translate="inclvat"
          tal:condition="display_gross"
          class="vat_label">incl. Vat</span>
    <span tal:replace="view/item_vat">20</span>%)
  </div>

  <span class="cart_item_uid"
        style="display: none;"
        tal:content="view/item_uid">12345678</span>

  <div class="item quantity">
      <strong i18n:translate="label_quantity">Quantity</strong>

      <input type="text"
             size="2"
             value="1"
             class="cart_item_count"
             tal:define="css python: view.quantity_unit_float and \
                                     'cart_item_count quantity_unit_float' or
                                     'cart_item_count';"
             tal:attributes="class css" />

      <span tal:content="view/quantity_unit"
            tal:condition="python:view.data.quantity_unit != 'quantity'">Quantity</span>
  </div>

  <div class="item comment"
       tal:condition="view/comment_enabled">
    <strong i18n:translate="comment">Comment</strong>
    <span class="required"
          tal:condition="view/comment_required"><!-- --></span>

    <input type="text"
           size="20"
           value=""
           class="cart_item_comment"
           name="comment"
           tal:define="css python: view.comment_required and \
                                   'cart_item_comment required' or
                                   'cart_item_comment';"
           tal:attributes="class css" />
  </div>

  <div class="item actions">
      <a href=""
         class="add_cart_item buyable_add_to_cart"
         i18n:translate="add_to_cart">add to cart</a>

      <a href=""
         class="update_cart_item buyable_update_cart"
         i18n:translate="update_cart">update cart</a>
  </div>

  <div class="visualClear"><!-- --></div>

</div>
